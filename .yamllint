---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  
  document-start:
    present: false
  
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
  
  indentation:
    spaces: 2
    indent-sequences: true
  
  trailing-spaces: enable
  
  comments:
    min-spaces-from-content: 1
